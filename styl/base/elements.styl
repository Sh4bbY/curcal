body
  background  : $gray-lighter;
  color       : $gray-dark;
  font-family : $base-font-family;
  font-size   : $base-font-size;

a
  color: $gray;

.main-nav
  display: flex;
  justify-content: center;
  align-items: center;

.main-nav-item
  margin: 0 5px;
  glossy-button()

input[type=text]
